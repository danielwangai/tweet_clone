<div class="row">
	<aside class="span4">
		<section>
			<h1><%= @user.email %></h1>
			<span><%= link_to "view my profile", @user %></span>
			<span><b>Tweets:</b> <%= @user.tweets.count %></span>
		</section>
		<section>
			<%= render 'shared/stats' %>
			<% if @users.any? %>
				<div class="user avatars">
					<% @users.each do |user| %>
						<p><%= link_to user.email, user %></p>


						<% @users.each_with_index do |user, index| %>
							<tr>
						      <td><%= index +=1 %></td>
						      <td><%= user.email %></td>
						      <td>
						        <%= link_to "Send Message", "#", class: "btn btn-success btn-xs start-conversation",
						                    "data-sid" => current_user.id, "data-rip" => user.id %>
						      </td>
						    </tr>
						<% end %>


						<hr>
					<% end %>
				</div>
			<% end %>
		</section>
	</aside>
	<div class="span8">
		<h3><%= @title %></h3>
		<% if @users.any? %>
			<ul class="users">
			
			</ul>
			<%= will_paginate %>
		<% end %>
	</div>
</div>