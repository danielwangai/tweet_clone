<div class="row">
	<div class="col-md-4 col-md-offset">
	<% if signed_in? %>
		<section>
			<%= render 'shared/stats' %>
		</section>
	<% end %>	
	</div>


	<!-- .col-md-8.col-md-offset-2.row  -->
	<% if signed_in? %>
		<div class="col-md-8">
			<div class="transitions-enabled">
				<% @tweets.each do |tweet| %>
					<div class="tweet_avatar col-md-2">
					</div>
					<div class="tweet_details col-md-10">
						<div>
							<p><%= link_to tweet.user.email, tweet %></p>
						</div>
						<div>
							<p>Submitted by <%= link_to tweet.user.email, @user %></p>
						</div>
			<hr>
					</div>
					

				<% end %>
			</div>
		</div>
	<% else %>
		<div>
			<h1>
				Welcome to twitter clone
			</h1>
		</div>
	<% end %>
	